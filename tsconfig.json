{
  "exclude": ["node_modules"],
  "include": ["**/*.ts"],
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "target": "es6",
    "module": "es6",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  }
}
